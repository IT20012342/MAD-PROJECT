<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CalculatorsScreen"
    android:gravity="center_horizontal">

  <androidx.cardview.widget.CardView
      android:layout_width="180dp"
      android:layout_height="163dp"
      android:layout_margin="10dp"
      app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/colorTile"
        android:radius="30dp">


      <ImageView

          android:id="@+id/voicecal"
          android:layout_width="102dp"
          android:layout_height="94dp"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="33dp"
          android:layout_marginTop="21dp"
          android:layout_marginEnd="45dp"
          android:contentDescription="@string/todo"
          app:srcCompat="@drawable/voicecalculator" />

      <TextView
          android:id="@+id/desc1"
          android:layout_width="109dp"
          android:layout_height="22dp"
          android:layout_below="@+id/voicecal"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentBottom="true"
          android:layout_marginStart="33dp"
          android:layout_marginTop="6dp"
          android:layout_marginEnd="38dp"
          android:layout_marginBottom="22dp"
          android:gravity="center"
          android:text="Voice Calculator"
          android:textColor="@color/colorTileText"
          android:textStyle="bold" />

    </RelativeLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
      android:layout_width="180dp"
      android:layout_height="163dp"
      android:layout_margin="10dp"
      app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/colorTile"
        android:radius="30dp">


      <ImageView

          android:id="@+id/gpaii"
          android:layout_width="102dp"
          android:layout_height="94dp"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="33dp"
          android:layout_marginTop="21dp"
          android:layout_marginEnd="45dp"
          android:contentDescription="@string/todo"
          app:srcCompat="@drawable/gpacalicon" />

      <TextView
          android:id="@+id/desc2"
          android:layout_width="111dp"
          android:layout_height="27dp"
          android:layout_below="@+id/gpaii"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentBottom="true"
          android:layout_marginStart="34dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="35dp"
          android:layout_marginBottom="18dp"
          android:gravity="center"
          android:text="GPA Calculator"
          android:textColor="@color/colorTileText"
          android:textStyle="bold" />

    </RelativeLayout>
  </androidx.cardview.widget.CardView>

  </LinearLayout>